{
  "name": "ujian-browser-kiosk",
  "version": "1.0.0",
  "description": "Browser Ujian Kiosk untuk macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --mac --arch universal"
  },
  "author": "Alfi",
  "license": "UNLICENSED",
  "dependencies": {
    "axios": "^1.7.2",
    "electron-prompt": "^1.7.0"
  },
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1"
  },
  "build": {
    "appId": "com.ujianbrowser.app",
    "productName": "Ujian Browser",
    "publish": null,
    "mac": {
      "target": "dmg",
      "category": "public.app-category.education",
      "icon": "assets/icon.icns",
      "minimumSystemVersion": "11.0.0",
      "hardenedRuntime": false
    }
  }
}